<% include ./header %>
  <h1>
    <a href="/candies">Candy Shoppe</a>
  </h1>
 <div class="container">
<h3>Edit <%= candy.name %></h3>

<fieldset>
  <form action="/candies/<%= candy.id %>?_method=PATCH" method="POST">
    <div class="form-group col-md-4">
      <input name="name" class="form-control" placeholder="<%= candy.name %>"/>
    </div>
    <div class="form-group col-md-4">
      <input name="color"  class="form-control" placeholder="<%= candy.color %>"/>
    </div>
      <div class="form-group col-md-4">
        <input class="btn btn-success col-md-6" type="submit" value="Save"> 
      </div>
  </form>

  <form action="/candies/<%= candy.id %>?_method=DELETE" method="POST">
    <div class="form-group col-md-4">
      <input class="btn btn-danger col-md-8" type="submit" value="Delete <%= candy.name %>?">
    </div>
  </form>
</fieldset>

<% include ./footer %>